{{outlet}}

{{create-button label="Create Country" link="countries.new"}}

<table id="countries-table"
       class="table table-bordered table-striped table-responsive">
  <thead>
    <tr>
      <th>Full Name</th>
      <th>ISO Code</th>
      <th>Region</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each}}
      <tr>
        <td>{{fullName}}</td>
        <td>{{isocode}}</td>
        <td>{{region}}</td>
        <td>
          {{action-buttons item=this}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
